<div {{ attributes }}>
	<div data-loading="addClass(disabled) addAttribute(disabled)">
         {{ form_start(form, {
            attr: {
                'data-action': 'live#action',
                'data-action-name': 'prevent|send'
            }
        }) }}

        {{ form_rest(form) }}

            <div class="form-group">
                <button type="submit" class="btn btn-dark">{{ 'ui.buttons.send_message'|trans }}</button>
            </div>

        {{ form_end(form) }}   
    </div>
</div>