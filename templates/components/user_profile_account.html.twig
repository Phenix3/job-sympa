<div class="_dashboard_content bg-white rounded mb-4" {{ attributes }}>
    <div class="_dashboard_content_header br-bottom py-3 px-3">
        <div class="_dashboard__header_flex">
            <h4 class="mb-0 ft-medium fs-md"><i class="fa fa-user mr-1 theme-cl fs-sm"></i>My Account</h4>
        </div>
    </div>

    <div class="_dashboard_content_body py-3 px-3" data-loading="addClass(opacity-50)">
        {{ form_start(form, {
            attr: {
                'data-action': 'live#action',
                'data-action-name': 'prevent|save',
                'class': 'row'
            }
        }) }}
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12">
                <div class="custom-file avater_uploads">
                    {{ form_row(form.avatarFile) }}
                </div>
            </div>

            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12">
                <div class="row">
                    <div class="col-xl-6 col-lg-6">
                        {{ form_row(form.username) }}
                    </div>
                    {% if form.jobTitle is defined %}
                        <div class="col-xl-6 col-lg-6">
                            {{ form_row(form.jobTitle) }}
                        </div>
                    {% endif %}
                    <div class="col-xl-6 col-lg-6">
                        {{ form_row(form.email) }}
                    </div>
                    {% if form.jobType is defined %}
                        <div class="col-xl-6 col-lg-6">
                            {{ form_row(form.jobType) }}
                        </div>
                    {% endif %}
                    <div class="col-xl-6 col-lg-6">
                        {{ form_row(form.category) }}
                    </div>
                    {% if form.experience is defined %}
                        <div class="col-xl-6 col-lg-6">
                            {{ form_row(form.experience) }}
                        </div>
                    {% endif %}
                    <div class="col-xl-6 col-lg-6">
                        {{ form_row(form.birth) }}
                    </div>
                    <div class="col-xl-12 col-lg-12">
                        {{ form_row(form.about) }}
                    </div>

                    <div class="col-xl-12 col-lg-12">
                        <div class="form-group">
                            <button type="submit" class="btn btn-md ft-medium text-light rounded theme-bg">
                                <i class="lni lni-save"></i> {{ 'ui.buttons.save'|trans }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        {{ form_end(form) }}
    </div>
</div>