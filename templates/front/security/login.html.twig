{% extends 'front/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <!-- ======================= Login Detail ======================== -->
    <section class="middle">
        <div class="container">
            <div class="row align-items-start justify-content-between">

                <div class="col-xl-6 col-lg-6 col-md-8 col-sm-8 mx-auto">
                    <form class="border p-3 rounded" method="post" action="{{ path('app_login') }}">
                        <h2>Connexion</h2>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        {% if error %}
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            <p>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </p>
                        </div>
                        {% endif %}
                        <div class="form-group">
                            <label for="email">{{ 'ui.form.email'|trans }}</label>
                            <input type="email" name="email" id="email" class="form-control" value="{{ last_username }}" placeholder="Email*">
                        </div>

                        <div class="form-group">
                            <label for="password">{{ 'ui.form.password'|trans }}</label>
                            <input type="password" name="password" id="password" class="form-control" placeholder="Password*">
                        </div>

                        <div class="form-group">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="flex-1">
                                    <input id="dd" class="checkbox-custom" name="_remember_me" type="checkbox">
                                    <label for="dd" class="checkbox-custom-label">{{ 'ui.form.remember_me'|trans }}</label>
                                </div>
                                <div class="eltio_k2">
                                    <a href="{{ path('app_forgot_password_request') }}">{{ 'ui.lost_password'|trans }}</a>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-md full-width theme-bg text-light fs-md ft-medium">
                                {{ 'ui.buttons.login'|trans }}</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- ======================= Login End ======================== -->
{% endblock %}
